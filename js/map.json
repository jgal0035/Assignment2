{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular", "center": [133, -28], "scale": 1000},

  "layer": [
    {
      "data": {
        "url": "ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#ffffff", "stroke": "black"}
    },
    {
      "data": {"url": "tourism.csv"},
      "mark": {"type": "circle", "tooltip": true},
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {"field": "daily_cost", "type": "quantitative", "title": "Tourism Cost"},
        "color": {
          "field": "daily_cost",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Tourism Intensity"
        }
      }
    }

    
  ],


  "config": {
    "background": "#ffffff",
    "legend": {"labelFont": "sans-serif", "titleFont": "sans-serif"}
  }
}
