{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "width": "container",
  "height": 600,
  "autosize": { "type": "fit", "contains": "padding" },
  "projection": { "type": "equirectangular", "center": [133, -27], "scale": 900 },

  "layer": [
    {
      "data": {
        "url": "output.json",
        "format": { "type": "topojson", "feature": "au" }
      },
      "mark": { "type": "geoshape", "fill": "#337d16be" }
    },
    {
      "data": {
        "url": "output.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "#4e4e4e", "strokeOpacity": 0.6 }
    },

    {
      "data": { "url": "data/tourism.csv" },
      "transform": [
        {
          "aggregate": [{ "op": "sum", "field": "Trips", "as": "sum_Trips" }],
          "groupby": ["Region"]
        },
        {
          "calculate": "datum.Region == 'Tasmania' ? 'Tasmania' : datum.Region",
          "as": "RegionKey"
        },
        {
          "lookup": "RegionKey",
          "from": {
            "data": { "url": "data/worldcities_au.csv" },
            "key": "city",
            "fields": ["lat", "lng", "country"]
          },
          "as": ["lat", "lon", "country"]
        },
        {
          "lookup": "RegionKey",
          "from": {
            "data": { "url": "data/worldcities_au.csv" },
            "key": "admin_name",
            "fields": ["lat", "lng", "country"]
          },
          "as": ["lat_admin", "lon_admin", "country_admin"]
        },
        {
          "calculate": "datum.Region == 'Tasmania' ? datum.lat_admin : datum.lat",
          "as": "lat_final"
        },
        {
          "calculate": "datum.Region == 'Tasmania' ? datum.lon_admin : datum.lon",
          "as": "lon_final"
        }
      ],
      "mark": { "type": "circle", "opacity": 0.7, "tooltip": true },
      "encoding": {
        "longitude": { "field": "lon_final", "type": "quantitative" },
        "latitude": { "field": "lat_final", "type": "quantitative" },
        "size": {
          "field": "sum_Trips",
          "type": "quantitative",
          "title": "Trips",
          "scale": { "range": [30, 4000] }
        },
        "color": {
          "field": "sum_Trips",
          "type": "nominal",
          "scale": { "scheme": "category20" },
          "legend": null
        },
        "tooltip": [
          { "field": "Region", "type": "nominal", "title": "Region" },
          { "field": "sum_Trips", "type": "quantitative", "title": "Trips" }
        ]
      }
    },

    {
      "data": { "url": "data/tourism.csv" },
      "transform": [
        {
          "aggregate": [{ "op": "sum", "field": "Trips", "as": "sum_Trips" }],
          "groupby": ["Region"]
        },
        {
          "calculate": "datum.Region == 'Tasmania' ? 'Tasmania' : datum.Region",
          "as": "RegionKey"
        },
        {
          "lookup": "RegionKey",
          "from": {
            "data": { "url": "data/worldcities_au.csv" },
            "key": "city",
            "fields": ["lat", "lng"]
          },
          "as": ["lat", "lon"]
        },
        {
          "lookup": "RegionKey",
          "from": {
            "data": { "url": "data/worldcities_au.csv" },
            "key": "admin_name",
            "fields": ["lat", "lng"]
          },
          "as": ["lat_admin", "lon_admin"]
        },
        {
          "calculate": "datum.Region == 'Tasmania' ? datum.lat_admin : datum.lat",
          "as": "lat_final"
        },
        {
          "calculate": "datum.Region == 'Tasmania' ? datum.lon_admin : datum.lon",
          "as": "lon_final"
        }
      ],
      "mark": { "type": "text", "dx": 8, "dy": -8, "fontSize": 12, "fontStyle": "italic" },
      "encoding": {
        "longitude": { "field": "lon_final", "type": "quantitative" },
        "latitude": { "field": "lat_final", "type": "quantitative" },
        "text": { "field": "Region" },
        "color": { "value": "black" }
      }
    }
  ],

  "config": {
    "background": "#eaf5ffff",
    "view": { "fill": "#6bcffac6", "stroke": null },
    "legend": { "orient": "right", "labelFontSize": 13, "titleFontSize": 12 }
  }
}
